# name: systemd-timer
# key: sc
# expand-env: ((yas-indent-line nil))
# --
[Unit]
Description=${1:DESCRIPTION}


[Timer]
# Which service to trigger (defaults to the same basename).
# Unit=MY-SERVICE.service

# When to start the timer after boot.
OnBootSec=30s

# How often to trigger the timer.
OnUnitActiveSec=60s

# Crucial for sub-minute cadence.
# AccuracySec=1s


[Install]
# This ensures the timer starts when you enable it:
#   systemctl --user enable --now mouse-speed.timer
WantedBy=timers.target


# Enable and start the timer in the current session.
# systemctl --user daemon-reload
# systemctl --user enable --now mouse-speed.timer